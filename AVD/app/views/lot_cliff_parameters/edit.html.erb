
<%= form_for @lot, :url => lot_cliff_parameter_path do |f| %>
	<div class="page-header">
		<h1>Cliff Mode Rules <small><%= @lot.name %></small></h1>
	</div>

	<div><h4>Cliff Generation Parameters</h4></div>
	<ul>
		<li><%= f.label "Cliff:" %>
			<%= f.number_field :cliff_number, :class => 'text_field', min: 0, max: @lot.total_device_count, step: 1 %></li>
		<li><%= f.label "First Region Yield:" %>
			<%= f.number_field :first_region_yield, :class => 'text_field', min: 0.0, max: 100.0, step: 0.01 %></li>
		<li><%= f.label "Second Region Yield:" %>
			<%= f.number_field :second_region_yield, :class => 'text_field', min: 0.0, max: 100.0, step: 0.01 %></li>
	</ul>

	<br>
	<%= f.submit "Submit" %>
	<%= link_to 'back to lot index', :controller => 'lots', :action => 'index' %>

<% end %>
